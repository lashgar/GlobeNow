<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="20dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/contentDescriptionImageView"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:orientation="vertical"
            android:paddingStart="@dimen/eventWideViewPadding"
            android:paddingEnd="0dp">
            <TextView
                android:id="@+id/wi_authorTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight"
                android:fontFamily="@font/corbelb"
                android:text=""
                android:textColor="@color/colorEventHeaderText"
                android:textSize="@dimen/dimenEventSizeHeaderText"
                android:textStyle=""
                android:gravity="center_vertical|start"/>
            <TextView
                android:id="@+id/wi_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/corbel"
                android:gravity="bottom"
                android:scaleType="fitXY"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorEventBodyText"
                android:textSize="@dimen/dimenEventSizeTitleText"
                android:lineSpacingMultiplier="@dimen/dimenEventLineSpacing"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/wi_contentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/corbel"
                android:gravity="bottom"
                android:scaleType="fitXY"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorEventBodyText"
                android:textSize="@dimen/dimenEventSizeBodyText"
                android:lineSpacingMultiplier="@dimen/dimenEventLineSpacing"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/listview_button_bar"/>

</LinearLayout>