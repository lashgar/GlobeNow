<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="20dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/contentDescriptionImageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wi_authorTextView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/corbelb"
                    android:text=""
                    android:textColor="@color/colorEventHeaderText"
                    android:textSize="@dimen/dimenEventSizeHeaderText"
                    android:textStyle=""
                    android:gravity="center_vertical|start"/>
                <ImageButton
                    android:id="@+id/wi_openButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_weight="0.10"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/iconopen"
                    android:contentDescription="@string/contentDescriptionOpenButton"
                    android:scaleType="centerInside"
                    android:padding="@dimen/buttonPadding"/>

                <ImageButton
                    android:id="@+id/wi_shareButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_weight="0.10"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/iconshare"
                    android:contentDescription="@string/contentDescriptionShareButton"
                    android:scaleType="centerInside"
                    android:padding="@dimen/buttonPadding"/>
            </LinearLayout>
            <TextView
                android:id="@+id/wi_contentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/corbel"
                android:gravity="bottom"
                android:scaleType="fitXY"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorEventBodyText"
                android:textSize="@dimen/dimenEventSizeBodyText"
                android:lineSpacingMultiplier="@dimen/dimenEventLineSpacing"
                android:onClick="onClick"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>