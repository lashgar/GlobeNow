<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/buttonHeight"
    android:baselineAligned="true"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageButton
            android:id="@+id/expandCollapseButton"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonHeight"
            android:background="@android:color/transparent"
            android:src="@mipmap/iconexpand"
            android:contentDescription="@string/contentDescriptionOpenButton"
            android:scaleType="centerInside"
            android:layout_gravity="end|center_vertical"
            android:padding="@dimen/buttonPadding"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageButton
            android:id="@+id/openButton"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonHeight"
            android:background="@android:color/transparent"
            android:src="@mipmap/iconopen"
            android:contentDescription="@string/contentDescriptionOpenButton"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="@dimen/buttonPadding"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="@dimen/buttonHeight"
        android:layout_height="@dimen/buttonHeight"
        android:background="@android:color/transparent"
        android:src="@mipmap/iconshare"
        android:contentDescription="@string/contentDescriptionShareButton"
        android:scaleType="centerInside"
            android:layout_gravity="start|center_vertical"
        android:padding="@dimen/buttonPadding"/>
    </LinearLayout>

</LinearLayout>