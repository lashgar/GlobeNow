<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="20dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wo_contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel"
            android:gravity="bottom"
            android:scaleType="fitXY"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/colorEventBodyText"
            android:textSize="@dimen/dimenEventSizeBodyText"
            android:lineSpacingMultiplier="@dimen/dimenEventLineSpacing"
            android:clickable="true"
            android:focusable="true"/>
        <TextView
            android:id="@+id/wo_authorTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonHeight"
            android:fontFamily="@font/corbelb"
            android:text=""
            android:textColor="@color/colorEventHeaderText"
            android:textSize="@dimen/dimenEventSizeHeaderText"
            android:textStyle=""
            android:gravity="center_vertical|start"/>
    </LinearLayout>

    <include layout="@layout/listview_button_bar"/>

</LinearLayout>