<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:weightSum="1">

        <com.google.android.gms.ads.formats.MediaView
        android:id="@+id/ad_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        />

        <TextView
            android:id="@+id/ad_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="bottom"
            android:scaleType="fitXY"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="@color/colorEventBodyText"
            android:textSize="@dimen/dimenEventSizeBodyText" />

        <TextView
            android:id="@+id/ad_header"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="@color/colorEventHeaderText"
            android:textSize="@dimen/dimenEventSizeHeaderText"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>